{
  "name": "splash",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "standard --fix",
    "depcheck": "dependency-check ./**/*.js --unused --no-dev",
    "coverage": "nyc npm run unit-tests",
    "unit-tests": "ava",
    "watch:unit-tests": "recaptcha_secret=test mongo_uri=test ava --watch",
    "test": "npm run lint && npm run coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@stripe/react-stripe-js": "^1.1.2",
    "@stripe/stripe-js": "^1.7.0",
    "@zeit/next-sass": "^1.0.1",
    "b36": "^1.0.0",
    "emotion-theming": "^10.0.27",
    "isomorphic-fetch": "^2.2.1",
    "next": "^9.4.4",
    "node-sass": "^4.13.0",
    "prop-types": "^15.7.2",
    "react": "16.12.0",
    "react-dom": "^16.12.0",
    "react-hook-form": "^5.7.2",
    "react-parallax": "^3.0.3",
    "react-recaptcha": "^2.3.10",
    "webpack": "^4.41.6"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.1.0",
    "husky": "^3.1.0",
    "nyc": "^15.0.0",
    "react-svg-loader": "^3.0.3",
    "standard": "^14.3.1"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
